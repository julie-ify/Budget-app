<div class="splash-wrap">
  <div class="devise-class">
    <h3 class="md-heading">LOGIN</h3>
  </div>
  <div class="fs-4 py-3 container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control py-2" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control mb-5 py-2" %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", data: {disable_with: "Login..."}, class: "btn btn-primary my-1"%>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
