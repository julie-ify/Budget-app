<div class="splash-wrap">
  <h2 class="fs-4 p-3 container mt-5 p-2">REGISTER</h2>

  <div class="fs-4 p-3 container mt-5 p-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, placeholder: "Full name", class: "form-control mb-1" %>
      </div>
      
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-1" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control mb-1" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control mb-1" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", data: {disable_with: "Signing..."}, class: "btn btn-primary my-1" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
